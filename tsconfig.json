{
  "compilerOptions": {
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./types"
  },
  "exclude": [
    "test/**"
  ],
  "paths": {
    "*": [
      "*"
    ]
  },
  "lib": [
    "ES6"
  ],
  "include": [
    "src/**/*"
  ]
}
